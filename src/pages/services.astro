---
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";
---

<!doctype html>
<html lang="es">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <meta
            name="description"
            content="Servicios de alquiler de tecnología: Servidores y Computadores - LCS Colombia"
        />
        <title>Servicios - LCS Colombia</title>
    </head>
    <body>
        <Navbar />

        <!-- Hero Services -->
        <section class="services-hero">
            <div class="hero-background"></div>
            <div class="services-hero-content">
                <h1 class="services-title">Nuestros Servicios</h1>
                <p class="services-lead">
                    Soluciones tecnológicas flexibles para cada necesidad
                </p>
                <div class="hero-stats">
                    <div class="stat-item">
                        <span class="stat-number">18+</span>
                        <span class="stat-label">Años de experiencia</span>
                    </div>
                    <div class="stat-item">
                        <span class="stat-number">1000+</span>
                        <span class="stat-label">Equipos disponibles</span>
                    </div>
                    <div class="stat-item">
                        <span class="stat-number">99%</span>
                        <span class="stat-label">Satisfacción cliente</span>
                    </div>
                </div>
            </div>
        </section>

        <!-- Services Overview -->
        <section class="services-overview">
            <div class="container">
                <h2 class="section-title-center">Nuestros Servicios</h2>
                <p class="section-subtitle">Soluciones integrales en tecnología para empresas</p>
                <div class="services-grid">
                    <div class="service-card main-service">
                        <div class="service-icon rental">
                            <svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                <rect x="2" y="3" width="20" height="14" rx="2" stroke="currentColor" stroke-width="2"/>
                                <path d="M8 21h8" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
                                <rect x="12" y="7" width="4" height="6" rx="1" stroke="currentColor" stroke-width="2"/>
                            </svg>
                        </div>
                        <h3 class="service-title">Alquiler de Equipos</h3>
                        <p class="service-description">
                            Computadores, servidores y portátiles para proyectos temporales
                        </p>
                    </div>

                    <div class="service-card main-service">
                        <div class="service-icon sales">
                            <svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                <rect x="2" y="3" width="20" height="14" rx="2" stroke="currentColor" stroke-width="2"/>
                                <circle cx="8" cy="10" r="2" stroke="currentColor" stroke-width="2"/>
                                <path d="M14 8h4M14 12h4" stroke="currentColor" stroke-width="2"/>
                            </svg>
                        </div>
                        <h3 class="service-title">Venta de Equipos</h3>
                        <p class="service-description">
                            Equipos de cómputo nuevos y reacondicionados para tu empresa
                        </p>
                    </div>

                    <div class="service-card main-service">
                        <div class="service-icon maintenance">
                            <svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                <path d="M14.7 6.3a1 1 0 0 0 0 1.4l1.6 1.6a1 1 0 0 0 1.4 0l3.77-3.77a6 6 0 0 1-7.94 7.94l-6.91 6.91a2.12 2.12 0 0 1-3-3l6.91-6.91a6 6 0 0 1 7.94-7.94l-3.76 3.76z" stroke="currentColor" stroke-width="2"/>
                            </svg>
                        </div>
                        <h3 class="service-title">Mantenimiento</h3>
                        <p class="service-description">
                            Mantenimiento preventivo y correctivo de equipos tecnológicos
                        </p>
                    </div>

                    <div class="service-card main-service">
                        <div class="service-icon recycling">
                            <svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                <path d="M7 19H6.5C5.11929 19 4 17.8807 4 16.5C4 15.1193 5.11929 14 6.5 14H7M7 19V14M7 19H8.5C9.88071 19 11 17.8807 11 16.5C11 15.1193 9.88071 14 8.5 14H7.5" stroke="currentColor" stroke-width="2"/>
                                <path d="M8 7L12 11L16 7" stroke="currentColor" stroke-width="2"/>
                            </svg>
                        </div>
                        <h3 class="service-title">Reciclaje Tecnológico</h3>
                        <p class="service-description">
                            Gestión ambiental responsable de equipos en desuso
                        </p>
                    </div>

                    <div class="service-card main-service">
                        <div class="service-icon marketing">
                            <svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                <path d="M12 19l9-7-9-7-9 7 9 7z" stroke="currentColor" stroke-width="2"/>
                                <path d="M5 12l7-7 7 7M5 12v7a2 2 0 002 2h10a2 2 0 002-2v-7" stroke="currentColor" stroke-width="2"/>
                            </svg>
                        </div>
                        <h3 class="service-title">Marketing Tecnológico</h3>
                        <p class="service-description">
                            Estrategias de marketing especializado en equipos de cómputo
                        </p>
                    </div>

                    <div class="service-card main-service">
                        <div class="service-icon supplies">
                            <svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                <rect x="2" y="6" width="20" height="12" rx="2" stroke="currentColor" stroke-width="2"/>
                                <path d="M6 10h12M6 14h8" stroke="currentColor" stroke-width="2"/>
                                <circle cx="18" cy="12" r="1" fill="currentColor"/>
                            </svg>
                        </div>
                        <h3 class="service-title">Suministros</h3>
                        <p class="service-description">
                            Venta de tóner, software de impresión y suministros tecnológicos
                        </p>
                    </div>

                    <div class="service-card main-service">
                        <div class="service-icon data-security">
                            <svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                <rect x="3" y="11" width="18" height="10" rx="2" ry="2" stroke="currentColor" stroke-width="2"/>
                                <circle cx="12" cy="16" r="1" fill="currentColor"/>
                                <path d="M7 11V7a5 5 0 0 1 10 0v4" stroke="currentColor" stroke-width="2"/>
                            </svg>
                        </div>
                        <h3 class="service-title">Seguridad de Datos</h3>
                        <p class="service-description">
                            Borrado seguro de información y destrucción de discos duros
                        </p>
                    </div>

                    <div class="service-card main-service">
                        <div class="service-icon donation">
                            <svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                <path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z" stroke="currentColor" stroke-width="2"/>
                            </svg>
                        </div>
                        <h3 class="service-title">Donación Tecnológica</h3>
                        <p class="service-description">
                            Programas de donación de tecnología para instituciones educativas
                        </p>
                    </div>
                </div>
            </div>
        </section>

       

        <Footer 
        />
    </body>
</html>

<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Oxygen, Ubuntu, Cantarell, "Helvetica Neue", sans-serif;
        background: #ffffff;
        color: #1a202c;
        overflow-x: hidden;
    }

    .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 2rem;
    }

    /* Services Hero */
    .services-hero {
        position: relative;
        padding: 8rem 2rem 6rem;
        background: linear-gradient(135deg, rgb(41,128,185) 0%, #0080ff 100%);
        text-align: center;
        overflow: hidden;
    }

    .hero-background {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: url("data:image/svg+xml,%3csvg width='60' height='60' viewBox='0 0 60 60' xmlns='http://www.w3.org/2000/svg'%3e%3cg fill='none' fill-rule='evenodd'%3e%3cg fill='%23ffffff' fill-opacity='0.1'%3e%3ccircle cx='30' cy='30' r='2'/%3e%3c/g%3e%3c/svg%3e") repeat;
        animation: float 20s ease-in-out infinite;
    }

    @keyframes float {
        0%, 100% { transform: translateY(0px); }
        50% { transform: translateY(-10px); }
    }

    .services-hero-content {
        position: relative;
        z-index: 2;
        max-width: 800px;
        margin: 0 auto;
    }

    .services-title {
        font-size: 4rem;
        font-weight: 900;
        color: #ffffff;
        margin-bottom: 1rem;
        letter-spacing: -2px;
    }

    .services-lead {
        font-size: 1.5rem;
        color: rgba(255, 255, 255, 0.9);
        margin-bottom: 3rem;
        font-weight: 400;
    }

    .hero-stats {
        display: flex;
        justify-content: center;
        gap: 3rem;
        flex-wrap: wrap;
    }

    .stat-item {
        text-align: center;
    }

    .stat-number {
        display: block;
        font-size: 3rem;
        font-weight: 900;
        color: #ffffff;
        line-height: 1;
        margin-bottom: 0.5rem;
    }

    .stat-label {
        color: rgba(255, 255, 255, 0.8);
        font-size: 1rem;
        font-weight: 500;
    }

    /* Services Overview */
    .services-overview {
        padding: 6rem 0;
        background: #f8fafc;
    }

    .section-title-center {
        font-size: 3rem;
        font-weight: 700;
        text-align: center;
        color: #1a202c;
        margin-bottom: 1rem;
    }

    .section-subtitle {
        font-size: 1.25rem;
        text-align: center;
        color: #64748b;
        margin-bottom: 4rem;
        max-width: 600px;
        margin-left: auto;
        margin-right: auto;
    }

    .services-grid {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        gap: 2rem;
        max-width: 1200px;
        margin: 0 auto;
    }

    .service-card {
        background: #ffffff;
        border-radius: 20px;
        padding: 2.5rem 2rem;
        text-align: center;
        border: 1px solid #e2e8f0;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        position: relative;
        overflow: hidden;
    }

    .service-card:hover {
        transform: translateY(-8px);
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
        border-color: rgb(41,128,185);
    }

    .service-icon {
        width: 80px;
        height: 80px;
        margin: 0 auto 1.5rem;
        background: linear-gradient(135deg, rgb(41,128,185) 0%, #0080ff 100%);
        border-radius: 16px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: #ffffff;
        transition: transform 0.3s ease;
    }

    .service-card:hover .service-icon {
        transform: scale(1.1);
    }

    .service-icon svg {
        width: 40px;
        height: 40px;
    }

    .service-title {
        font-size: 1.5rem;
        font-weight: 700;
        color: #1a202c;
        margin-bottom: 1rem;
    }

    .service-description {
        color: #64748b;
        line-height: 1.6;
        font-size: 1rem;
    }

    /* CTA Section */
    .services-cta {
        padding: 6rem 0;
        background: linear-gradient(135deg, rgb(41,128,185) 0%, #0080ff 100%);
    }

    .cta-content {
        text-align: center;
        max-width: 600px;
        margin: 0 auto;
    }

    .cta-title {
        font-size: 2.5rem;
        font-weight: 700;
        color: #ffffff;
        margin-bottom: 1rem;
    }

    .cta-text {
        font-size: 1.25rem;
        color: rgba(255, 255, 255, 0.9);
        margin-bottom: 2rem;
    }

    .cta-buttons {
        display: flex;
        gap: 1rem;
        justify-content: center;
        flex-wrap: wrap;
    }

    .btn-cta-primary,
    .btn-cta-secondary {
        padding: 1rem 2rem;
        border-radius: 12px;
        font-weight: 600;
        text-decoration: none;
        transition: all 0.3s ease;
    }

    .btn-cta-primary {
        background: #ffffff;
        color: rgb(41,128,185);
        border: 2px solid #ffffff;
    }

    .btn-cta-primary:hover {
        background: rgba(255, 255, 255, 0.9);
        transform: translateY(-2px);
    }

    .btn-cta-secondary {
        background: rgba(255, 255, 255, 0.1);
        color: #ffffff;
        border: 2px solid rgba(255, 255, 255, 0.3);
        backdrop-filter: blur(10px);
    }

    .btn-cta-secondary:hover {
        background: rgba(255, 255, 255, 0.2);
        border-color: rgba(255, 255, 255, 0.5);
        transform: translateY(-2px);
    }

    /* Responsive */
    @media (max-width: 1024px) {
        .services-grid {
            grid-template-columns: repeat(3, 1fr);
        }
    }

    @media (max-width: 768px) {
        .services-grid {
            grid-template-columns: repeat(2, 1fr);
            gap: 1.5rem;
        }

        .services-title {
            font-size: 2.5rem;
        }

        .section-title-center {
            font-size: 2.5rem;
        }

        .hero-stats {
            gap: 2rem;
        }

        .stat-number {
            font-size: 2rem;
        }
    }

    @media (max-width: 480px) {
        .services-grid {
            grid-template-columns: 1fr;
        }

        .cta-buttons {
            flex-direction: column;
            align-items: center;
        }

        .btn-cta-primary,
        .btn-cta-secondary {
            width: 100%;
            max-width: 300px;
        }
    }
</style>
