<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Enhanced Category filtering functionality
        const filterButtons = document.querySelectorAll('.filter-btn');
        const productCards = document.querySelectorAll('.product-card');
        const searchInput = document.getElementById('search-input') as HTMLInputElement;

        function filterProducts() {
            const activeButton = document.querySelector('.filter-btn.active');
            const category = activeButton?.getAttribute('data-category') || 'all';
            const searchTerm = searchInput.value.toLowerCase();

            productCards.forEach((card) => {
                const cardCategory = card.getAttribute('data-category');
                const cardTitle = card.querySelector('.product-title')?.textContent?.toLowerCase() || '';
                const cardSpecs = Array.from(card.querySelectorAll('.product-specs span'))
                    .map(spec => spec.textContent?.toLowerCase() || '')
                    .join(' ');

                const matchesCategory = category === 'all' || cardCategory === category;
                const matchesSearch = searchTerm === '' || 
                    cardTitle.includes(searchTerm) || 
                    cardSpecs.includes(searchTerm);

                if (matchesCategory && matchesSearch) {
                    card.classList.remove('hidden');
                } else {
                    card.classList.add('hidden');
                }
            });
        }

        filterButtons.forEach(button => {
            button.addEventListener('click', function(event) {
                const target = event.target as HTMLButtonElement;
                filterButtons.forEach(btn => btn.classList.remove('active'));
                target.classList.add('active');
                filterProducts();
            });
        });

        if (searchInput) {
            searchInput.addEventListener('input', filterProducts);
        }

        // Floating particles animation
        const hero = document.querySelector('.catalog-hero .floating-particles');
        if (hero) {
            for (let i = 0; i < 12; i++) {
                const particle = document.createElement('div');
                particle.style.cssText = `
                    position: absolute;
                    width: ${Math.random() * 4 + 3}px;
                    height: ${Math.random() * 4 + 3}px;
                    background: rgba(${41 + Math.random() * 40}, ${128 + Math.random() * 40}, ${185 + Math.random() * 40}, ${0.4 + Math.random() * 0.4});
                    border-radius: 50%;
                    left: ${Math.random() * 100}%;
                    animation: floatUp ${4 + Math.random() * 3}s linear infinite;
                    animation-delay: ${Math.random() * -6}s;
                    box-shadow: 0 0 8px rgba(${41 + Math.random() * 40}, ${128 + Math.random() * 40}, ${185 + Math.random() * 40}, 0.3);
                `;
                hero.appendChild(particle);
            }
        }
    });
</script>