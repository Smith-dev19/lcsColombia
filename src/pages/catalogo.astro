<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Oxygen, Ubuntu, Cantarell, "Helvetica Neue", sans-serif;
        background: #ffffff;
        color: #1a202c;
        overflow-x: hidden;
    }

    .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 2rem;
    }

    /* Dark sections - matching home style */
    .dark-section {
        position: relative;
        background: #0f0f23;
        overflow: hidden;
        color: #ffffff;
    }

    .dark-background {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        z-index: 0;
    }

    .dark-background .gradient-overlay {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: radial-gradient(
                circle at 30% 50%,
                rgba(41, 128, 185, 0.15) 0%,
                transparent 50%
            ),
            radial-gradient(
                circle at 70% 50%,
                rgba(52, 152, 219, 0.15) 0%,
                transparent 50%
            );
    }

    .dark-section .container {
        position: relative;
        z-index: 1;
    }

    .white-text {
        color: #ffffff !important;
    }

    .light-text {
        color: #a0aec0 !important;
    }

    .animated-shapes {
        position: absolute;
        width: 100%;
        height: 100%;
        overflow: hidden;
    }

    .shape {
        position: absolute;
        border-radius: 50%;
        filter: blur(60px);
        opacity: 0.3;
        animation: float 20s infinite ease-in-out;
    }

    .shape-1 {
        width: 400px;
        height: 400px;
        background: linear-gradient(135deg, rgb(41,128,185), #0080ff);
        top: 10%;
        left: 10%;
        animation-delay: 0s;
    }

    .shape-2 {
        width: 300px;
        height: 300px;
        background: linear-gradient(135deg, rgb(84,182,227), rgb(41,128,185));
        bottom: 20%;
        right: 15%;
        animation-delay: 5s;
    }

    .shape-3 {
        width: 350px;
        height: 350px;
        background: linear-gradient(135deg, #0080ff, rgb(84,182,227));
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        animation-delay: 10s;
    }

    @keyframes float {
        0%,
        100% {
            transform: translate(0, 0) scale(1);
        }
        33% {
            transform: translate(30px, -30px) scale(1.1);
        }
        66% {
            transform: translate(-20px, 20px) scale(0.9);
        }
    }

    /* Catalog Hero */
    .catalog-hero {
        position: relative;
        padding: 8rem 2rem 6rem;
        background: linear-gradient(135deg, rgb(41,128,185) 0%, #0080ff 100%);
        text-align: center;
        overflow: hidden;
    }

    .hero-background {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        z-index: 0;
    }

    .catalog-hero-content {
        position: relative;
        z-index: 1;
        max-width: 800px;
        margin: 0 auto;
    }

    .catalog-title {
        font-size: 4rem;
        font-weight: 900;
        color: #ffffff;
        margin-bottom: 1rem;
        letter-spacing: -2px;
    }

    .catalog-lead {
        font-size: 1.5rem;
        color: rgba(255, 255, 255, 0.9);
        font-weight: 400;
    }

    /* Category Filters */
    .category-filters {
        padding: 4rem 0;
        background: #f8fafc;
        border-bottom: 1px solid #e2e8f0;
    }

    .filter-buttons {
        display: flex;
        gap: 1rem;
        justify-content: center;
        flex-wrap: wrap;
    }

    .filter-btn {
        padding: 0.75rem 1.5rem;
        border: 2px solid #e2e8f0;
        background: #ffffff;
        color: #64748b;
        border-radius: 50px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
    }

    .filter-btn:hover,
    .filter-btn.active {
        border-color: rgb(41,128,185);
        background: rgb(41,128,185);
        color: #ffffff;
    }

    /* Products Section */
    .products-section {
        padding: 6rem 0;
    }

    .products-grid {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        gap: 2rem;
        margin-top: 2rem;
    }

    .product-card {
        background: #ffffff;
        border-radius: 16px;
        overflow: hidden;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
        transition: all 0.3s ease;
        border: 1px solid #f1f5f9;
    }

    .product-card:hover {
        transform: translateY(-8px);
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.15);
    }

    .product-card.hidden {
        display: none;
    }

    .product-image {
        position: relative;
        height: 200px;
        overflow: hidden;
    }

    .product-image img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.3s ease;
    }

    .product-card:hover .product-image img {
        transform: scale(1.1);
    }

    .product-overlay {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: rgba(41, 128, 185, 0.9);
        display: flex;
        align-items: center;
        justify-content: center;
        opacity: 0;
        transition: opacity 0.3s ease;
    }

    .product-card:hover .product-overlay {
        opacity: 1;
    }

    .btn-view-details {
        padding: 0.75rem 1.5rem;
        background: #ffffff;
        color: rgb(41,128,185);
        border: none;
        border-radius: 8px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
    }

    .btn-view-details:hover {
        background: #f8fafc;
        transform: scale(1.05);
    }

    .product-info {
        padding: 1.5rem;
    }

    .product-title {
        font-size: 1.25rem;
        font-weight: 700;
        color: #1a202c;
        margin-bottom: 0.5rem;
    }

    .product-category {
        color: #64748b;
        font-size: 0.9rem;
        margin-bottom: 1rem;
    }

    .product-specs {
        display: flex;
        flex-wrap: wrap;
        gap: 0.5rem;
        margin-bottom: 1rem;
    }

    .product-specs span {
        padding: 0.25rem 0.5rem;
        background: #f1f5f9;
        color: #475569;
        font-size: 0.8rem;
        border-radius: 4px;
    }

    .product-price {
        font-size: 1.25rem;
        font-weight: 700;
        color: rgb(41,128,185);
    }

    /* CTA Section */
    .catalog-cta {
        padding: 6rem 0;
    }

    .cta-content {
        text-align: center;
        max-width: 600px;
        margin: 0 auto;
    }

    .cta-title {
        font-size: 2.5rem;
        font-weight: 700;
        margin-bottom: 1rem;
    }

    .cta-text {
        font-size: 1.25rem;
        margin-bottom: 2rem;
    }

    .cta-buttons {
        display: flex;
        gap: 1rem;
        justify-content: center;
        flex-wrap: wrap;
    }

    .btn-cta-primary,
    .btn-cta-secondary {
        padding: 1rem 2rem;
        border-radius: 12px;
        font-weight: 600;
        text-decoration: none;
        transition: all 0.3s ease;
    }

    .btn-cta-primary {
        background: linear-gradient(135deg, rgb(41,128,185) 0%, rgb(52,152,219) 100%);
        color: #ffffff;
        box-shadow: 0 8px 25px rgba(41, 128, 185, 0.4);
    }

    .btn-cta-primary:hover {
        transform: translateY(-2px);
        box-shadow: 0 12px 30px rgba(41, 128, 185, 0.6);
    }

    .btn-cta-secondary {
        background: rgba(255, 255, 255, 0.1);
        color: #ffffff;
        border: 1px solid rgba(255, 255, 255, 0.2);
        backdrop-filter: blur(10px);
    }

    .btn-cta-secondary:hover {
        background: rgba(255, 255, 255, 0.2);
        transform: translateY(-2px);
    }

    /* Responsive */
    @media (max-width: 1024px) {
        .products-grid {
            grid-template-columns: repeat(3, 1fr);
        }
    }

    @media (max-width: 768px) {
        .products-grid {
            grid-template-columns: repeat(2, 1fr);
            gap: 1rem;
        }

        .catalog-title {
            font-size: 2.5rem;
        }

        .filter-buttons {
            gap: 0.5rem;
        }

        .filter-btn {
            padding: 0.5rem 1rem;
            font-size: 0.9rem;
        }
    }

    @media (max-width: 480px) {
        .products-grid {
            grid-template-columns: 1fr;
        }

        .cta-buttons {
            flex-direction: column;
            align-items: center;
        }
    }
</style>

<script>
    // Category filtering functionality
    document.addEventListener('DOMContentLoaded', function() {
        const filterButtons = document.querySelectorAll('.filter-btn');
        const productCards = document.querySelectorAll('.product-card');

        filterButtons.forEach(button => {
            button.addEventListener('click', function(event) {
                const target = event.target as HTMLButtonElement;
                const category = target.getAttribute('data-category');
                
                // Update active button
                filterButtons.forEach(btn => btn.classList.remove('active'));
                target.classList.add('active');

                // Filter products
                productCards.forEach(card => {
                    if (category === 'all' || card.getAttribute('data-category') === category) {
                        card.classList.remove('hidden');
                    } else {
                        card.classList.add('hidden');
                    }
                });
            });
        });
    });
</script>