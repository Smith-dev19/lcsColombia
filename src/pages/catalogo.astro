<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Oxygen, Ubuntu, Cantarell, "Helvetica Neue", sans-serif;
        background: #ffffff;
        color: #1a202c;
        overflow-x: hidden;
    }

    .container {
        max-width: 1400px;
        margin: 0 auto;
        padding: 0 2rem;
    }

    /* Dark sections - matching home style */
    .dark-section {
        position: relative;
        background: #0f0f23;
        overflow: hidden;
        color: #ffffff;
    }

    .dark-background {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        z-index: 0;
    }

    .dark-background .gradient-overlay {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: radial-gradient(
                circle at 30% 50%,
                rgba(41, 128, 185, 0.15) 0%,
                transparent 50%
            ),
            radial-gradient(
                circle at 70% 50%,
                rgba(52, 152, 219, 0.15) 0%,
                transparent 50%
            );
    }

    .dark-section .container {
        position: relative;
        z-index: 1;
    }

    .white-text {
        color: #ffffff !important;
    }

    .light-text {
        color: #a0aec0 !important;
    }

    .animated-shapes {
        position: absolute;
        width: 100%;
        height: 100%;
        overflow: hidden;
    }

    .shape {
        position: absolute;
        border-radius: 50%;
        filter: blur(60px);
        opacity: 0.3;
        animation: float 20s infinite ease-in-out;
    }

    .shape-1 {
        width: 400px;
        height: 400px;
        background: linear-gradient(135deg, rgb(41,128,185), #0080ff);
        top: 10%;
        left: 10%;
        animation-delay: 0s;
    }

    .shape-2 {
        width: 300px;
        height: 300px;
        background: linear-gradient(135deg, rgb(84,182,227), rgb(41,128,185));
        bottom: 20%;
        right: 15%;
        animation-delay: 5s;
    }

    .shape-3 {
        width: 350px;
        height: 350px;
        background: linear-gradient(135deg, #0080ff, rgb(84,182,227));
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        animation-delay: 10s;
    }

    @keyframes float {
        0%,
        100% {
            transform: translate(0, 0) scale(1);
        }
        33% {
            transform: translate(30px, -30px) scale(1.1);
        }
        66% {
            transform: translate(-20px, 20px) scale(0.9);
        }
    }

    /* Enhanced Catalog Hero */
    .catalog-hero {
        position: relative;
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        background: #0f0f23;
        text-align: center;
        overflow: hidden;
        padding: 2rem;
    }

    .hero-background {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        z-index: 0;
    }

    .gradient-overlay {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: radial-gradient(
                circle at 30% 50%,
                rgba(41, 128, 185, 0.15) 0%,
                transparent 50%
            ),
            radial-gradient(
                circle at 70% 50%,
                rgba(52, 152, 219, 0.15) 0%,
                transparent 50%
            );
    }

    .tech-grid {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background-image: 
            linear-gradient(rgba(41, 128, 185, 0.08) 1px, transparent 1px),
            linear-gradient(90deg, rgba(41, 128, 185, 0.08) 1px, transparent 1px);
        background-size: 40px 40px;
        animation: gridMove 15s linear infinite;
        opacity: 0.9;
    }

    @keyframes gridMove {
        0% { transform: translate(0, 0); }
        100% { transform: translate(40px, 40px); }
    }

    .floating-particles {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        overflow: hidden;
    }

    .floating-particles::before,
    .floating-particles::after {
        content: '';
        position: absolute;
        width: 6px;
        height: 6px;
        background: rgba(41, 128, 185, 0.7);
        border-radius: 50%;
        animation: floatUp 6s linear infinite;
        box-shadow: 0 0 10px rgba(41, 128, 185, 0.3);
    }

    .floating-particles::before {
        left: 20%;
        animation-delay: -2s;
        animation-duration: 5s;
    }

    .floating-particles::after {
        left: 80%;
        animation-delay: -4s;
        animation-duration: 6s;
        background: rgba(52, 152, 219, 0.7);
        box-shadow: 0 0 10px rgba(52, 152, 219, 0.3);
    }

    @keyframes floatUp {
        0% {
            transform: translateY(100vh) scale(0);
            opacity: 0;
        }
        10% {
            opacity: 1;
        }
        90% {
            opacity: 1;
        }
        100% {
            transform: translateY(-10vh) scale(1.5);
            opacity: 0;
        }
    }

    .catalog-hero-content {
        position: relative;
        z-index: 1;
        max-width: 900px;
        margin: 0 auto;
    }

    .hero-badge {
        display: inline-block;
        padding: 0.5rem 1.5rem;
        background: rgba(41, 128, 185, 0.1);
        border: 1px solid rgba(41, 128, 185, 0.3);
        border-radius: 50px;
        color: rgba(41, 128, 185, 1);
        font-size: 0.9rem;
        font-weight: 600;
        margin-bottom: 2rem;
        backdrop-filter: blur(10px);
        animation: fadeInUp 0.8s ease-out;
    }

    .catalog-title {
        font-size: 4.5rem;
        font-weight: 900;
        color: #ffffff;
        margin-bottom: 1.5rem;
        letter-spacing: -3px;
        line-height: 1.1;
        animation: fadeInUp 0.8s ease-out 0.2s backwards;
    }

    .highlight {
