<!doctype html>
<html lang="es">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />
        <meta
            name="description"
            content="Alquiler de computadores para empresas - Somos la solución en alquiler de tecnología"
        />
        <title>LCS Colombia - Alquiler de Computadores para Empresas</title>
        <link rel="stylesheet" href="/src/styles/global.css" />
        <link rel="stylesheet" href="/src/styles/home.css" />
    </head>
    <body>
        <Navbar />

        <!-- Hero Section -->
        <section class="hero">
            <div class="hero-background">
                <div class="gradient-overlay"></div>
                <div class="tech-grid"></div>
                <div class="floating-particles"></div>
                <div class="animated-shapes">
                    <div class="shape shape-1"></div>
                    <div class="shape shape-2"></div>
                    <div class="shape shape-3"></div>
                </div>
            </div>

            <div class="hero-content">
                <h1 class="hero-title">
                    Alquiler de computadores<br />
                    <span class="highlight">para empresas</span>
                </h1>
                <p class="hero-subtitle">
                    Somos la solución en alquiler de tecnología
                </p>
                <div class="hero-actions">
                    <a href="/cotizar" class="btn-primary-large">
                        <span>Cotizar Ahora</span>
                        <svg viewBox="0 0 20 20" fill="currentColor">
                            <path
                                fill-rule="evenodd"
                                d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z"
                                clip-rule="evenodd"></path>
                        </svg>
                    </a>
                    <a href="/catalogo" class="btn-secondary-large">
                        Ver Catálogo
                    </a>
                </div>

                <!-- Stats -->
                <div class="hero-stats">
                    <div class="stat">
                        <div class="stat-number">500+</div>
                        <div class="stat-label">Equipos Disponibles</div>
                    </div>
                    <div class="stat">
                        <div class="stat-number">200+</div>
                        <div class="stat-label">
                            Empresas Confían en Nosotros
                        </div>
                    </div>
                    <div class="stat">
                        <div class="stat-number">24/7</div>
                        <div class="stat-label">Soporte Técnico</div>
                    </div>
                </div>
            </div>
        </section>
    </body>
</html>

<script>
    // Add more floating particles dynamically
    document.addEventListener('DOMContentLoaded', function() {
        const particleContainer = document.querySelector('.floating-particles');
        
        if (particleContainer) {
            // Create additional particles
            for (let i = 0; i < 12; i++) {
                const particle = document.createElement('div');
                particle.className = 'particle';
                particle.style.cssText = `
                    position: absolute;
                    width: ${Math.random() * 4 + 3}px;
                    height: ${Math.random() * 4 + 3}px;
                    background: rgba(${41 + Math.random() * 40}, ${128 + Math.random() * 40}, ${185 + Math.random() * 40}, ${0.4 + Math.random() * 0.4});
                    border-radius: 50%;
                    left: ${Math.random() * 100}%;
                    animation: floatUp ${4 + Math.random() * 3}s linear infinite;
                    animation-delay: ${Math.random() * -6}s;
                    box-shadow: 0 0 8px rgba(${41 + Math.random() * 40}, ${128 + Math.random() * 40}, ${185 + Math.random() * 40}, 0.3);
                `;
                particleContainer.appendChild(particle);
            }
        }
    });
</script>

<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto,
            Oxygen, Ubuntu, Cantarell, "Helvetica Neue", sans-serif;
        background: #0f0f23;
        color: #ffffff;
        overflow-x: hidden;
    }

    /* Hero Section */
    .hero {
        position: relative;
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 2rem;
        overflow: hidden;
    }

    /* Background */
    .hero-background {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        z-index: 0;
    }

    .gradient-overlay {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: radial-gradient(
                circle at 30% 50%,
                rgba(41, 128, 185, 0.15) 0%,
                transparent 50%
            ),
            radial-gradient(
                circle at 70% 50%,
                rgba(52, 152, 219, 0.15) 0%,
                transparent 50%
            );
    }

    /* Tech Grid Effect */
    .tech-grid {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background-image: 
            linear-gradient(rgba(41, 128, 185, 0.08) 1px, transparent 1px),
            linear-gradient(90deg, rgba(41, 128, 185, 0.08) 1px, transparent 1px);
        background-size: 40px 40px;
        animation: gridMove 15s linear infinite;
        opacity: 0.9;
    }

    @keyframes gridMove {
        0% { transform: translate(0, 0); }
        100% { transform: translate(40px, 40px); }
    }

    /* Floating Particles */
    .floating-particles {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        overflow: hidden;
    }

    .floating-particles::before,
    .floating-particles::after {
        content: '';
        position: absolute;
        width: 6px;
        height: 6px;
        background: rgba(41, 128, 185, 0.7);
        border-radius: 50%;
        animation: floatUp 6s linear infinite;
        box-shadow: 0 0 10px rgba(41, 128, 185, 0.3);
    }

    .floating-particles::before {
        left: 20%;
        animation-delay: -2s;
        animation-duration: 5s;
    }

    .floating-particles::after {
        left: 80%;
        animation-delay: -4s;
        animation-duration: 6s;
        background: rgba(52, 152, 219, 0.7);
        box-shadow: 0 0 10px rgba(52, 152, 219, 0.3);
    }

    @keyframes floatUp {
        0% {
            transform: translateY(100vh) scale(0);
            opacity: 0;
        }
        10% {
            opacity: 1;
        }
        90% {
            opacity: 1;
        }
        100% {
            transform: translateY(-10vh) scale(1.5);
            opacity: 0;
        }
    }

    /* Animated Shapes */
    .animated-shapes {
        position: absolute;
        width: 100%;
        height: 100%;
        overflow: hidden;
    }

    .shape {
        position: absolute;
        border-radius: 50%;
        filter: blur(60px);
        opacity: 0.3;
        animation: float 20s infinite ease-in-out;
    }

    .shape-1 {
        width: 400px;
        height: 400px;
        background: linear-gradient(135deg, rgb(41,128,185), #0080ff);
        top: 10%;
        left: 10%;
        animation-delay: 0s;
    }

    .shape-2 {
        width: 300px;
        height: 300px;
        background: linear-gradient(135deg, rgb(84,182,227), rgb(41,128,185));
        bottom: 20%;
        right: 15%;
        animation-delay: 5s;
    }

    .shape-3 {
        width: 350px;
        height: 350px;
        background: linear-gradient(135deg, #0080ff, rgb(84,182,227));
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        animation-delay: 10s;
    }

    @keyframes float {
        0%,
        100% {
            transform: translate(0, 0) scale(1) rotate(0deg);
        }
        25% {
            transform: translate(40px, -25px) scale(1.15) rotate(2deg);
        }
        50% {
            transform: translate(25px, 30px) scale(0.9) rotate(-1deg);
        }
        75% {
            transform: translate(-30px, 10px) scale(1.05) rotate(1deg);
        }
    }

    /* Tech Lines Animation */
    .hero-background::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: 
            linear-gradient(45deg, transparent 47%, rgba(41, 128, 185, 0.2) 49%, rgba(41, 128, 185, 0.2) 51%, transparent 53%),
            linear-gradient(-45deg, transparent 47%, rgba(52, 152, 219, 0.2) 49%, rgba(52, 152, 219, 0.2) 51%, transparent 53%);
        background-size: 150px 150px, 200px 200px;
        animation: techLines 10s linear infinite;
        opacity: 0.6;
    }

    @keyframes techLines {
        0% { background-position: 0 0, 0 0; }
        100% { background-position: 150px 150px, -200px 200px; }
    }

    /* Hero Content */
    .hero-content {
        position: relative;
        z-index: 1;
        max-width: 1200px;
        text-align: center;
    }

    .hero-title {
        font-size: 4rem;
        font-weight: 900;
        line-height: 1.1;
        margin-bottom: 1.5rem;
        letter-spacing: -2px;
        animation: fadeInUp 0.8s ease-out;
    }

    .highlight {
        background: linear-gradient(135deg, rgb(41,128,185) 0%, #0080ff 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        position: relative;
    }

    .hero-subtitle {
        font-size: 1.75rem;
        color: #a0aec0;
        margin-bottom: 3rem;
        font-weight: 400;
        animation: fadeInUp 0.8s ease-out 0.2s backwards;
    }

    /* Hero Actions */
    .hero-actions {
        display: flex;
        gap: 1.5rem;
        justify-content: center;
        flex-wrap: wrap;
        margin-bottom: 4rem;
        animation: fadeInUp 0.8s ease-out 0.4s backwards;
    }

    .btn-primary-large {
        display: inline-flex;
        align-items: center;
        gap: 0.75rem;
        padding: 1.25rem 2.5rem;
        background: linear-gradient(135deg, rgb(41,128,185) 0%, #0080ff 100%);
        color: #ffffff;
        text-decoration: none;
        font-weight: 700;
        font-size: 1.125rem;
        border-radius: 16px;
        box-shadow: 0 10px 30px rgba(41, 128, 185, 0.4);
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        position: relative;
        overflow: hidden;
    }

    .btn-primary-large::before {
        content: "";
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(
            90deg,
            transparent,
            rgba(255, 255, 255, 0.3),
            transparent
        );
        transition: left 0.6s ease;
    }

    .btn-primary-large:hover::before {
        left: 100%;
    }

    .btn-primary-large:hover {
        transform: translateY(-3px);
        box-shadow: 0 15px 40px rgba(41, 128, 185, 0.6);
    }

    .btn-primary-large svg {
        width: 20px;
        height: 20px;
        transition: transform 0.3s ease;
    }

    .btn-primary-large:hover svg {
        transform: translateX(5px);
    }

    .btn-secondary-large {
        display: inline-flex;
        align-items: center;
        padding: 1.25rem 2.5rem;
        background: rgba(255, 255, 255, 0.05);
        backdrop-filter: blur(10px);
        border: 2px solid rgba(41, 128, 185, 0.4);
        color: #ffffff;
        text-decoration: none;
        font-weight: 600;
        font-size: 1.125rem;
        border-radius: 16px;
        transition: all 0.3s ease;
    }

    .btn-secondary-large:hover {
        background: rgba(41, 128, 185, 0.15);
        border-color: rgba(41, 128, 185, 0.7);
        transform: translateY(-3px);
    }

    /* Hero Stats */
    .hero-stats {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 3rem;
        max-width: 900px;
        margin: 0 auto;
        animation: fadeInUp 0.8s ease-out 0.6s backwards;
    }

    .stat {
        text-align: center;
    }

    .stat-number {
        font-size: 3rem;
        font-weight: 900;
        background: linear-gradient(135deg, rgb(41,128,185) 0%, #0080ff 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        margin-bottom: 0.5rem;
        line-height: 1;
    }

    .stat-label {
        font-size: 1rem;
        color: #a0aec0;
        font-weight: 500;
    }

    /* Animations */
    @keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(30px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    /* Responsive */
    @media (max-width: 768px) {
        .hero-title {
            font-size: 2.5rem;
            letter-spacing: -1px;
        }

        .hero-subtitle {
            font-size: 1.25rem;
            margin-bottom: 2rem;
        }

        .hero-actions {
            flex-direction: column;
            gap: 1rem;
        }

        .btn-primary-large,
        .btn-secondary-large {
            width: 100%;
            justify-content: center;
            padding: 1rem 2rem;
            font-size: 1rem;
        }

        .hero-stats {
            grid-template-columns: 1fr;
            gap: 2rem;
        }

        .stat-number {
            font-size: 2.5rem;
        }

        .shape-1,
        .shape-2,
        .shape-3 {
            width: 250px;
            height: 250px;
        }
    }

    @media (max-width: 480px) {
        .hero {
            padding: 1rem;
        }

        .hero-title {
            font-size: 2rem;
        }

        .hero-subtitle {
            font-size: 1.125rem;
        }
    }
</style>
