<script>
    // Add more floating particles dynamically
    document.addEventListener('DOMContentLoaded', function() {
        const particleContainer = document.querySelector('.floating-particles');
        
        if (particleContainer) {
            // Create additional particles
            for (let i = 0; i < 12; i++) {
                const particle = document.createElement('div');
                particle.className = 'particle';
                particle.style.cssText = `
                    position: absolute;
                    width: ${Math.random() * 4 + 3}px;
                    height: ${Math.random() * 4 + 3}px;
                    background: rgba(${41 + Math.random() * 40}, ${128 + Math.random() * 40}, ${185 + Math.random() * 40}, ${0.4 + Math.random() * 0.4});
                    border-radius: 50%;
                    left: ${Math.random() * 100}%;
                    animation: floatUp ${4 + Math.random() * 3}s linear infinite;
                    animation-delay: ${Math.random() * -6}s;
                    box-shadow: 0 0 8px rgba(${41 + Math.random() * 40}, ${128 + Math.random() * 40}, ${185 + Math.random() * 40}, 0.3);
                `;
                particleContainer.appendChild(particle);
            }
        }

        // Advanced Custom Cursor System
        const cursorSystem = document.getElementById('cursor-system');
        const cursorCore = document.getElementById('cursor-core');
        const cursorOrbital = document.getElementById('cursor-orbital');
        const cursorTrail = document.getElementById('cursor-trail');
        const cursorParticles = document.getElementById('cursor-particles');
        const cursorField = document.getElementById('cursor-field');
        
        if (!cursorSystem || !cursorCore) {
            console.log('Cursor system not found');
            return;
        }
        
        let mouseX = window.innerWidth / 2;
        let mouseY = window.innerHeight / 2;
        let cursorX = mouseX;
        let cursorY = mouseY;
        let velocity = { x: 0, y: 0 };
        
        // Trail system
        const trailDots = [];
        const maxTrailDots = 15;
        
        // Particle system
        const particles = [];
        const maxParticles = 8;
        
        // Initialize trail dots
        for (let i = 0; i < maxTrailDots; i++) {
            const dot = document.createElement('div');
            dot.className = 'trail-dot';
            dot.style.opacity = (1 - i / maxTrailDots) * 0.8;
            cursorTrail.appendChild(dot);
            trailDots.push({ 
                element: dot, 
                x: mouseX, 
                y: mouseY,
                delay: i * 0.05
            });
        }
        
        // Initialize particles
        function createParticle() {
            const particle = document.createElement('div');
            particle.className = 'cursor-particle';
            cursorParticles.appendChild(particle);
            
            const angle = Math.random() * Math.PI * 2;
            const distance = Math.random() * 30 + 10;
            const life = Math.random() * 60 + 40;
            
            return {
                element: particle,
                x: cursorX,
                y: cursorY,
                vx: Math.cos(angle) * (Math.random() * 2 + 1),
                vy: Math.sin(angle) * (Math.random() * 2 + 1),
                life: life,
                maxLife: life,
                size: Math.random() * 4 + 2
            };
        }
        
        // Show cursor system
        cursorSystem.style.opacity = '1';
        console.log('Advanced cursor system initialized');
        
        // Mouse movement tracking
        document.addEventListener('mousemove', (e) => {
            mouseX = e.clientX;
            mouseY = e.clientY;
            
            // Calculate velocity for dynamic effects
            velocity.x = (e.clientX - cursorX) * 0.1;
            velocity.y = (e.clientY - cursorY) * 0.1;
        });
        
        // Click effects
        document.addEventListener('mousedown', () => {
            cursorCore.classList.add('clicked');
            createClickRipple();
            
            // Burst particles on click
            for (let i = 0; i < 6; i++) {
                setTimeout(() => {
                    particles.push(createParticle());
                }, i * 20);
            }
        });
        
        document.addEventListener('mouseup', () => {
            cursorCore.classList.remove('clicked');
        });
        
        // Interactive elements hover
        const interactiveElements = document.querySelectorAll('a, button, .btn-primary-large, .btn-secondary-large');
        
        interactiveElements.forEach(element => {
            element.addEventListener('mouseenter', () => {
                cursorCore.classList.add('hover');
                cursorOrbital.classList.add('hover');
            });
            
            element.addEventListener('mouseleave', () => {
                cursorCore.classList.remove('hover');
                cursorOrbital.classList.remove('hover');
            });
        });
        
        // Create click ripple effect
        function createClickRipple() {
            const ripple = document.createElement('div');
            ripple.className = 'click-ripple';
            ripple.style.left = cursorX + 'px';
            ripple.style.top = cursorY + 'px';
            document.body.appendChild(ripple);
            
            setTimeout(() => {
                ripple.remove();
            }, 600);
        }
        
        // Update particles
        function updateParticles() {
            particles.forEach((particle, index) => {
                particle.life--;
                particle.x += particle.vx;
                particle.y += particle.vy;
                particle.vy += 0.1; // gravity
                
                const opacity = particle.life / particle.maxLife;
                const scale = opacity;
                
                particle.element.style.left = particle.x + 'px';
                particle.element.style.top = particle.y + 'px';
                particle.element.style.opacity = opacity;
                particle.element.style.transform = `translate(-50%, -50%) scale(${scale})`;
                
                if (particle.life <= 0) {
                    particle.element.remove();
                    particles.splice(index, 1);
                }
            });
        }
        
        // Main animation loop
        function animateCursor() {
            // Smooth cursor movement
            const ease = 0.12;
            cursorX += (mouseX - cursorX) * ease;
            cursorY += (mouseY - cursorY) * ease;
            
            // Position cursor system
            cursorSystem.style.left = cursorX + 'px';
            cursorSystem.style.top = cursorY + 'px';
            
            // Update trail dots
            trailDots.forEach((dot, index) => {
                const targetX = index === 0 ? cursorX : trailDots[index - 1].x;
                const targetY = index === 0 ? cursorY : trailDots[index - 1].y;
                
                dot.x += (targetX - dot.x) * (0.2 - dot.delay);
                dot.y += (targetY - dot.y) * (0.2 - dot.delay);
                
                dot.element.style.left = (dot.x - cursorX) + 'px';
                dot.element.style.top = (dot.y - cursorY) + 'px';
            });
            
            // Update magnetic field effect
            const speed = Math.sqrt(velocity.x * velocity.x + velocity.y * velocity.y);
            cursorField.style.transform = `scale(${1 + speed * 0.1}) rotate(${Date.now() * 0.001}rad)`;
            
            // Update particles
            updateParticles();
            
            // Spawn particles occasionally
            if (Math.random() < 0.1 && particles.length < maxParticles) {
                particles.push(createParticle());
            }
            
            requestAnimationFrame(animateCursor);
        }
        
        // Start the animation loop
        animateCursor();
        
        // Show cursor system
        setTimeout(() => {
            if (cursorSystem) {
                cursorSystem.style.opacity = '1';
            }
        }, 100);
    });
</script>

<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto,
            Oxygen, Ubuntu, Cantarell, "Helvetica Neue", sans-serif;
        background: #0f0f23;
        color: #ffffff;
        overflow-x: hidden;
        cursor: none !important;
    }

    * {
        cursor: none !important;
    }

    /* Advanced Cursor System */
    .cursor-system {
        position: fixed;
        pointer-events: none;
        z-index: 2147483647;
        transform: translate(-50%, -50%);
        opacity: 0;
        transition: opacity 0.3s ease;
    }

    /* Cursor Core */
    .cursor-core {
        position: relative;
        width: 24px;
        height: 24px;
    }

    .core-inner {
        position: absolute;
        top: 50%;
        left: 50%;
        width: 10px;
        height: 10px;
        background: linear-gradient(45deg, #ffffff, rgba(41, 128, 185, 1));
        border-radius: 50%;
        transform: translate(-50%, -50%);
        box-shadow: 
            0 0 15px rgba(255, 255, 255, 1),
            0 0 30px rgba(41, 128, 185, 0.8),
            0 0 45px rgba(41, 128, 185, 0.6);
        animation: coreGlow 2s ease-in-out infinite;
    }

    .core-ring {
        position: absolute;
        top: 50%;
        left: 50%;
        width: 24px;
        height: 24px;
        border: 2px solid rgba(41, 128, 185, 0.8);
        border-radius: 50%;
        transform: translate(-50%, -50%);
        animation: coreRotate 4s linear infinite;
    }

    .core-ring::before {
        content: '';
        position: absolute;
        top: -3px;
        left: 50%;
        width: 6px;
        height: 6px;
        background: rgba(255, 255, 255, 1);
        border-radius: 50%;
        transform: translateX(-50%);
        box-shadow: 
            0 0 12px rgba(255, 255, 255, 0.9),
            0 0 20px rgba(41, 128, 185, 0.8);
    }

    .core-pulse {
        position: absolute;
        top: 50%;
        left: 50%;
        width: 36px;
        height: 36px;
        border: 2px solid rgba(41, 128, 185, 0.4);
        border-radius: 50%;
        transform: translate(-50%, -50%);
        animation: corePulse 2s ease-in-out infinite;
    }

    /* Orbital Rings */
    .cursor-orbital {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
    }

    .orbital-ring {
        position: absolute;
        border: 1px solid transparent;
        border-radius: 50%;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        opacity: 0.6;
    }

    .ring-1 {
        width: 55px;
        height: 55px;
        border-color: rgba(41, 128, 185, 0.5);
        animation: orbitRotate1 8s linear infinite;
    }

    .ring-1::before {
        content: '';
        position: absolute;
        top: -4px;
        left: 50%;
        width: 5px;
        height: 5px;
        background: rgba(255, 255, 255, 0.9);
        border-radius: 50%;
        transform: translateX(-50%);
        box-shadow: 
            0 0 8px rgba(255, 255, 255, 0.8),
            0 0 16px rgba(52, 152, 219, 0.6);
    }

    .ring-2 {
        width: 80px;
        height: 80px;
        border-color: rgba(52, 152, 219, 0.3);
        animation: orbitRotate2 12s linear infinite reverse;
    }

    .ring-2::before {
        content: '';
        position: absolute;
        top: -3px;
        right: -3px;
        width: 4px;
        height: 4px;
        background: rgba(255, 255, 255, 0.8);
        border-radius: 50%;
        box-shadow: 
            0 0 6px rgba(255, 255, 255, 0.7),
            0 0 12px rgba(84, 182, 227, 0.5);
    }

    .ring-3 {
        width: 105px;
        height: 105px;
        border-color: rgba(84, 182, 227, 0.2);
        animation: orbitRotate3 16s linear infinite;
    }

    .ring-3::before {
        content: '';
        position: absolute;
        bottom: -3px;
        left: 30%;
        width: 3px;
        height: 3px;
        background: rgba(255, 255, 255, 0.7);
        border-radius: 50%;
        box-shadow: 
            0 0 5px rgba(255, 255, 255, 0.6),
            0 0 10px rgba(41, 128, 185, 0.4);
    }

    /* Trail Dots */
    .cursor-trail {
        position: absolute;
        top: 0;
        left: 0;
    }

    .trail-dot {
        position: absolute;
        width: 12px;
        height: 12px;
        background: radial-gradient(circle, rgba(255, 255, 255, 0.9) 0%, rgba(41, 128, 185, 0.8) 50%, rgba(52, 152, 219, 0.4) 70%, transparent);
        border-radius: 50%;
        transform: translate(-50%, -50%);
        box-shadow: 
            0 0 15px rgba(255, 255, 255, 0.6),
            0 0 25px rgba(41, 128, 185, 0.5);
        animation: trailFloat 3s ease-in-out infinite;
    }

    /* Particles */
    .cursor-particles {
        position: absolute;
        top: 0;
        left: 0;
    }

    .cursor-particle {
        position: absolute;
        width: 6px;
        height: 6px;
        background: radial-gradient(circle, rgba(255, 255, 255, 1) 0%, rgba(41, 128, 185, 0.8) 70%);
        border-radius: 50%;
        transform: translate(-50%, -50%);
        box-shadow: 
            0 0 10px rgba(255, 255, 255, 0.8),
            0 0 18px rgba(41, 128, 185, 0.6);
        pointer-events: none;
    }

    /* Magnetic Field Effect */
    .cursor-field {
        position: absolute;
        top: 50%;
        left: 50%;
        width: 140px;
        height: 140px;
        background: radial-gradient(circle, transparent 50%, rgba(41, 128, 185, 0.08) 65%, rgba(255, 255, 255, 0.03) 75%, transparent 85%);
        border-radius: 50%;
        transform: translate(-50%, -50%);
        opacity: 0.7;
        animation: fieldPulse 6s ease-in-out infinite;
    }

    /* Click Ripple Effect */
    .click-ripple {
        position: fixed;
        width: 20px;
        height: 20px;
        border: 2px solid rgba(41, 128, 185, 0.6);
        border-radius: 50%;
        transform: translate(-50%, -50%);
        pointer-events: none;
        z-index: 2147483645;
        animation: rippleExpand 0.6s ease-out forwards;
    }

    /* Hover States */
    .cursor-core.hover .core-inner {
        width: 14px;
        height: 14px;
        animation-duration: 1s;
        box-shadow: 
            0 0 20px rgba(255, 255, 255, 1),
            0 0 40px rgba(41, 128, 185, 0.9),
            0 0 60px rgba(41, 128, 185, 0.7);
    }

    .cursor-core.hover .core-ring {
        width: 32px;
        height: 32px;
        border-color: rgba(41, 128, 185, 1);
        animation-duration: 2s;
    }

    .cursor-orbital.hover .ring-1 {
        width: 70px;
        height: 70px;
        border-color: rgba(41, 128, 185, 0.7);
    }

    .cursor-orbital.hover .ring-2 {
        width: 95px;
        height: 95px;
        border-color: rgba(52, 152, 219, 0.5);
    }

    .cursor-orbital.hover .ring-3 {
        width: 120px;
        height: 120px;
        border-color: rgba(84, 182, 227, 0.3);
    }

    /* Click State */
    .cursor-core.clicked {
        transform: scale(1.3);
        transition: transform 0.1s ease-out;
    }

    .cursor-core.clicked .core-inner {
        background: linear-gradient(45deg, #ffffff, rgba(255, 255, 255, 0.8));
        box-shadow: 
            0 0 15px rgba(255, 255, 255, 1),
            0 0 30px rgba(41, 128, 185, 0.8);
    }

    /* Animations */
    @keyframes coreGlow {
        0%, 100% { 
            box-shadow: 
                0 0 10px rgba(255, 255, 255, 0.8),
                0 0 20px rgba(41, 128, 185, 0.6);
        }
        50% { 
            box-shadow: 
                0 0 15px rgba(255, 255, 255, 1),
                0 0 30px rgba(41, 128, 185, 0.8);
        }
    }

    @keyframes coreRotate {
        from { transform: translate(-50%, -50%) rotate(0deg); }
        to { transform: translate(-50%, -50%) rotate(360deg); }
    }

    @keyframes corePulse {
        0%, 100% { 
            transform: translate(-50%, -50%) scale(1);
            opacity: 0.6;
        }
        50% { 
            transform: translate(-50%, -50%) scale(1.2);
            opacity: 0.3;
        }
    }

    @keyframes orbitRotate1 {
        from { transform: translate(-50%, -50%) rotate(0deg); }
        to { transform: translate(-50%, -50%) rotate(360deg); }
    }

    @keyframes orbitRotate2 {
        from { transform: translate(-50%, -50%) rotate(0deg); }
        to { transform: translate(-50%, -50%) rotate(360deg); }
    }

    @keyframes orbitRotate3 {
        from { transform: translate(-50%, -50%) rotate(0deg); }
        to { transform: translate(-50%, -50%) rotate(360deg); }
    }

    @keyframes trailFloat {
        0%, 100% { 
            transform: translate(-50%, -50%) scale(1);
            opacity: 0.8;
        }
        50% { 
            transform: translate(-50%, -50%) scale(1.1);
            opacity: 0.6;
        }
    }

    @keyframes fieldPulse {
        0%, 100% { 
            transform: translate(-50%, -50%) scale(1) rotate(0deg);
            opacity: 0.3;
        }
        50% { 
            transform: translate(-50%, -50%) scale(1.2) rotate(180deg);
            opacity: 0.1;
        }
    }

    @keyframes rippleExpand {
        0% {
            width: 20px;
            height: 20px;
            opacity: 1;
        }
        100% {
            width: 60px;
            height: 60px;
            opacity: 0;
        }
    }

    /* Hide cursor on mobile devices */
    @media (max-width: 768px) {
        .cursor,
        .cursor-trail {
            display: none;
        }
        
        body {
            cursor: auto !important;
        }
    }

    /* Hero Section */
    .hero {
        position: relative;
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 2rem;
        overflow: hidden;
    }

    /* Background */
    .hero-background {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        z-index: 0;
    }

    .gradient-overlay {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: radial-gradient(
                circle at 30% 50%,
                rgba(41, 128, 185, 0.15) 0%,
                transparent 50%
            ),
            radial-gradient(
                circle at 70% 50%,
                rgba(52, 152, 219, 0.15) 0%,
                transparent 50%
            );
    }

    /* Tech Grid Effect */
    .tech-grid {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background-image: 
            linear-gradient(rgba(41, 128, 185, 0.08) 1px, transparent 1px),
            linear-gradient(90deg, rgba(41, 128, 185, 0.08) 1px, transparent 1px);
        background-size: 40px 40px;
        animation: gridMove 15s linear infinite;
        opacity: 0.9;
    }

    @keyframes gridMove {
        0% { transform: translate(0, 0); }
        100% { transform: translate(40px, 40px); }
    }

    /* Floating Particles */
    .floating-particles {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        overflow: hidden;
    }

    .floating-particles::before,
    .floating-particles::after {
        content: '';
        position: absolute;
        width: 6px;
        height: 6px;
        background: rgba(41, 128, 185, 0.7);
        border-radius: 50%;
        animation: floatUp 6s linear infinite;
        box-shadow: 0 0 10px rgba(41, 128, 185, 0.3);
    }

    .floating-particles::before {
        left: 20%;
        animation-delay: -2s;
        animation-duration: 5s;
    }

    .floating-particles::after {
        left: 80%;
        animation-delay: -4s;
        animation-duration: 6s;
        background: rgba(52, 152, 219, 0.7);
        box-shadow: 0 0 10px rgba(52, 152, 219, 0.3);
    }

    @keyframes floatUp {
        0% {
            transform: translateY(100vh) scale(0);
            opacity: 0;
        }
        10% {
            opacity: 1;
        }
        90% {
            opacity: 1;
        }
        100% {
            transform: translateY(-10vh) scale(1.5);
            opacity: 0;
        }
    }

    /* Animated Shapes */
    .animated-shapes {
        position: absolute;
        width: 100%;
        height: 100%;
        overflow: hidden;
    }

    .shape {
        position: absolute;
        border-radius: 50%;
        filter: blur(60px);
        opacity: 0.3;
        animation: float 20s infinite ease-in-out;
    }

    .shape-1 {
        width: 400px;
        height: 400px;
        background: linear-gradient(135deg, rgb(41,128,185), #0080ff);
        top: 10%;
        left: 10%;
        animation-delay: 0s;
    }

