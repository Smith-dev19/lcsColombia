        width: 300px;
        height: 300px;
        background: linear-gradient(135deg, rgb(84,182,227), rgb(41,128,185));
        bottom: 20%;
        right: 15%;
        animation-delay: 5s;
    }

    .shape-3 {
        width: 350px;
        height: 350px;
        background: linear-gradient(135deg, #0080ff, rgb(84,182,227));
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        animation-delay: 10s;
    }

    @keyframes float {
        0%,
        100% {
            transform: translate(0, 0) scale(1) rotate(0deg);
