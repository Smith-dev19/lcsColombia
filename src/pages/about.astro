<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Oxygen, Ubuntu, Cantarell, "Helvetica Neue", sans-serif;
        background: #ffffff;
        color: #1a202c;
        overflow-x: hidden;
    }

    .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 2rem;
    }

    /* Hero Section */
    .about-hero {
        position: relative;
        padding: 8rem 2rem 6rem;
        background: linear-gradient(135deg, rgb(41,128,185) 0%, #0080ff 100%);
        text-align: center;
        overflow: hidden;
        margin-top: 60px;
    }

    .hero-background {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        z-index: 0;
    }

    .animated-shapes {
        position: absolute;
        width: 100%;
        height: 100%;
        overflow: hidden;
    }

    .shape {
        position: absolute;
        border-radius: 50%;
        filter: blur(60px);
        opacity: 0.3;
        animation: float 20s infinite ease-in-out;
    }

    .shape-1 {
        width: 400px;
        height: 400px;
        background: linear-gradient(135deg, rgb(41,128,185), #0080ff);
        top: 10%;
        left: 10%;
        animation-delay: 0s;
    }

    .shape-2 {
        width: 300px;
        height: 300px;
        background: linear-gradient(135deg, rgb(84,182,227), rgb(41,128,185));
        bottom: 20%;
        right: 15%;
        animation-delay: 5s;
    }

    .shape-3 {
        width: 350px;
        height: 350px;
        background: linear-gradient(135deg, #0080ff, rgb(84,182,227));
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        animation-delay: 10s;
    }

    @keyframes float {
        0%, 100% {
            transform: translate(0, 0) scale(1);
        }
        33% {
            transform: translate(30px, -30px) scale(1.1);
        }
        66% {
            transform: translate(-20px, 20px) scale(0.9);
        }
    }

    .about-hero-content {
        position: relative;
        z-index: 1;
        max-width: 800px;
        margin: 0 auto;
    }

    .about-title {
        font-size: 4rem;
        font-weight: 900;
        color: #ffffff;
        margin-bottom: 1rem;
        letter-spacing: -2px;
    }

    .about-lead {
        font-size: 1.5rem;
        color: rgba(255, 255, 255, 0.9);
        font-weight: 400;
    }

    /* About Content */
    .about-content {
        padding: 6rem 0;
    }

    .content-grid {
        display: grid;
        gap: 4rem;
    }

    .content-section {
        max-width: 800px;
        margin: 0 auto;
    }

    .section-title {
        font-size: 2.5rem;
        font-weight: 700;
        color: #1a202c;
        margin-bottom: 2rem;
        text-align: center;
    }

    .section-text {
        font-size: 1.1rem;
        line-height: 1.8;
        color: #4a5568;
        margin-bottom: 1.5rem;
        text-align: justify;
    }

    /* Mission & Vision */
    .mission-vision-grid {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 2rem;
        margin-top: 2rem;
    }

    .mv-card {
        background: #ffffff;
        padding: 2rem;
        border-radius: 16px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
        text-align: center;
        border: 1px solid #f1f5f9;
    }

    .mv-icon {
        width: 60px;
        height: 60px;
        margin: 0 auto 1.5rem;
        color: rgb(41,128,185);
    }

    .mv-card h3 {
        font-size: 1.5rem;
        font-weight: 700;
        color: #1a202c;
        margin-bottom: 1rem;
    }

    .mv-card p {
        color: #4a5568;
        line-height: 1.6;
    }

    /* Values Section */
    .values-section {
        position: relative;
        background: #0f0f23;
        padding: 6rem 0;
        overflow: hidden;
    }

    .values-background {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        z-index: 0;
    }

    .values-background .gradient-overlay {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: radial-gradient(
                circle at 30% 50%,
                rgba(41, 128, 185, 0.15) 0%,
                transparent 50%
            ),
            radial-gradient(
                circle at 70% 50%,
                rgba(52, 152, 219, 0.15) 0%,
                transparent 50%
            );
    }

    .values-section .container {
        position: relative;
        z-index: 1;
    }

    .values-title {
        font-size: 3rem;
        font-weight: 700;
        color: #ffffff;
        text-align: center;
        margin-bottom: 3rem;
    }

    .values-grid {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        gap: 2rem;
    }

    .value-card {
        background: rgba(255, 255, 255, 0.05);
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 16px;
        padding: 2rem;
        text-align: center;
        transition: transform 0.3s ease;
    }

    .value-card:hover {
        transform: translateY(-8px);
    }

    .value-icon {
        width: 50px;
        height: 50px;
        margin: 0 auto 1.5rem;
        color: rgb(41,128,185);
    }

    .value-card h3 {
        font-size: 1.25rem;
        font-weight: 700;
        color: #ffffff;
        margin-bottom: 1rem;
    }

    .value-card p {
        color: #a0aec0;
        line-height: 1.6;
    }

    /* Team Section */
    .team-section {
        padding: 6rem 0;
        background: #f8fafc;
    }

    .team-title {
        font-size: 3rem;
        font-weight: 700;
        color: #1a202c;
        text-align: center;
        margin-bottom: 1rem;
    }

    .team-subtitle {
        font-size: 1.25rem;
        color: #4a5568;
        text-align: center;
        margin-bottom: 3rem;
    }

    .team-grid {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 2rem;
    }

    .team-member {
        background: #ffffff;
        border-radius: 16px;
        padding: 2rem;
        text-align: center;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
        border: 1px solid #f1f5f9;
    }

    .member-image {
        margin-bottom: 1.5rem;
    }

    .placeholder-avatar {
        width: 80px;
        height: 80px;
        margin: 0 auto;
        background: rgb(41,128,185);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        color: #ffffff;
    }

    .placeholder-avatar svg {
        width: 40px;
        height: 40px;
    }

    .team-member h3 {
        font-size: 1.5rem;
        font-weight: 700;
        color: #1a202c;
        margin-bottom: 0.5rem;
    }

    .member-role {
        font-size: 1rem;
        color: rgb(41,128,185);
        font-weight: 600;
        margin-bottom: 1rem;
    }

    .member-description {
        color: #4a5568;
        line-height: 1.6;
    }

    /* Statistics Section */
    .stats-section {
        position: relative;
        background: linear-gradient(135deg, rgb(41,128,185) 0%, #0080ff 100%);
        padding: 6rem 0;
        overflow: hidden;
    }

    .stats-background {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        z-index: 0;
    }

    .stats-section .container {
        position: relative;
        z-index: 1;
    }

    .stats-grid {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        gap: 2rem;
    }

    .stat-card {
        text-align: center;
        color: #ffffff;
    }

    .stat-number {
        font-size: 3rem;
        font-weight: 900;
        margin-bottom: 0.5rem;
        color: #ffffff;
    }

    .stat-label {
        font-size: 1.1rem;
        color: rgba(255, 255, 255, 0.9);
        font-weight: 500;
    }

    /* Responsive */
    @media (max-width: 1024px) {
        .values-grid {
            grid-template-columns: repeat(2, 1fr);
        }

        .team-grid {
            grid-template-columns: repeat(2, 1fr);
        }

        .stats-grid {
            grid-template-columns: repeat(2, 1fr);
        }
    }

    @media (max-width: 768px) {
        .about-title {
            font-size: 2.5rem;
        }

        .mission-vision-grid {
            grid-template-columns: 1fr;
        }

        .values-grid {
            grid-template-columns: 1fr;
        }

        .team-grid {
            grid-template-columns: 1fr;
        }

        .stats-grid {
            grid-template-columns: 1fr;
            gap: 3rem;
        }

        .values-title,
        .team-title {
            font-size: 2.5rem;
        }
    }

    @media (max-width: 480px) {
        .about-hero {
            padding: 6rem 2rem 4rem;
        }

        .about-content,
        .values-section,
        .team-section,
        .stats-section {
            padding: 4rem 0;
        }
    }
</style>
