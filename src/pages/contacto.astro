    /* Contact Hero Section */
    .contact-hero {
        position: relative;
        min-height: 100vh;
        display: flex;
        align-items: center;
        overflow: hidden;
        margin-top: 60px;
    }

    .hero-background {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        z-index: 0;
    }

    .background-image {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background-image: url('/image/soporte.jpg');
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
    }

    .contact-hero .container {
        position: relative;
        z-index: 1;
        width: 100%;
    }

    .hero-content {
        text-align: center;
        color: #ffffff;
        height: 100%;
        display: flex;
        align-items: center;
    }

    .content-layout {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 4rem;
        align-items: center;
        width: 100%;
    }

    .form-section {
        display: flex;
        justify-content: flex-start;
    }

    .info-section {
        display: flex;
        justify-content: center;
        align-items: center;
    }

    /* Responsive */
    @media (max-width: 1024px) {
        .content-layout {
            gap: 3rem;
        }
    }

    @media (max-width: 768px) {
        .content-layout {
            grid-template-columns: 1fr;
            gap: 2rem;
        }

        .contact-hero {
            min-height: auto;
            padding: 4rem 0;
        }

        .form-section,
        .info-section {
            justify-content: center;
        }
    }

    /* Social Media Section */
    .social-section {
        background: #ffffff;
        padding: 6rem 0;
    }

    .social-content {
        text-align: center;
    }

    .social-header {
        margin-bottom: 4rem;
    }

    .social-title {
        font-size: 3rem;
        font-weight: 700;
        color: #1a202c;
        margin-bottom: 1rem;
        background: linear-gradient(135deg, #1a202c 0%, #0080ff 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .social-subtitle {
        font-size: 1.25rem;
        color: #4a5568;
        max-width: 600px;
        margin: 0 auto;
        line-height: 1.6;
    }

    .social-grid {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        gap: 2rem;
        max-width: 1000px;
        margin: 0 auto;
    }

    .social-card {
        background: #ffffff;
        border: 1px solid #e2e8f0;
        border-radius: 20px;
        padding: 2.5rem 1.5rem;
        text-decoration: none;
        transition: all 0.3s ease;
        display: flex;
        flex-direction: column;
        align-items: center;
        text-align: center;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.05);
        position: relative;
        overflow: hidden;
    }

    .social-card::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 4px;
        background: linear-gradient(135deg, #0080ff 0%, #00a3ff 100%);
        transform: scaleX(0);
        transition: transform 0.3s ease;
    }

    .social-card:hover::before {
        transform: scaleX(1);
    }

    .social-card:hover {
        transform: translateY(-8px);
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.15);
        border-color: #0080ff;
    }

    .social-icon {
        width: 60px;
        height: 60px;
        border-radius: 16px;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-bottom: 1.5rem;
        transition: all 0.3s ease;
    }

    .social-icon svg {
        width: 32px;
        height: 32px;
        transition: transform 0.3s ease;
    }

    .social-card:hover .social-icon svg {
        transform: scale(1.1);
    }

    /* Facebook */
    .social-card.facebook .social-icon {
        background: linear-gradient(135deg, #1877f2 0%, #42a5f5 100%);
        color: #ffffff;
    }

    /* Instagram */
    .social-card.instagram .social-icon {
        background: linear-gradient(135deg, #e1306c 0%, #fd1d1d 25%, #fcb045 50%, #833ab4 100%);
        color: #ffffff;
    }

    /* WhatsApp */
    .social-card.whatsapp .social-icon {
        background: linear-gradient(135deg, #25d366 0%, #128c7e 100%);
        color: #ffffff;
    }

    /* LinkedIn */
    .social-card.linkedin .social-icon {
        background: linear-gradient(135deg, #0077b5 0%, #00a0dc 100%);
        color: #ffffff;
    }

    .social-info h3 {
        font-size: 1.5rem;
        font-weight: 700;
        color: #1a202c;
        margin-bottom: 0.5rem;
        transition: color 0.3s ease;
    }

    .social-info p {
        color: #4a5568;
        font-size: 1rem;
        line-height: 1.5;
        transition: color 0.3s ease;
    }

    .social-card:hover .social-info h3 {
        color: #0080ff;
    }

    .social-card:hover .social-info p {
        color: #2d3748;
    }

    /* Responsive Social Section */
    @media (max-width: 1024px) {
