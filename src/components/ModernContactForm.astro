---
// ModernContactForm Component
interface Props {
    className?: string;
}

const { className = "" } = Astro.props;
---

<div class={`modern-form ${className}`}>
    <div class="form-header">
        <h2 class="form-title">Contáctanos</h2>
        <p class="form-subtitle">Estamos aquí para ayudarte con tu proyecto tecnológico</p>
    </div>
    
    <form class="contact-form" id="contactForm">
        <div class="form-row">
            <div class="input-group">
                <input type="text" id="firstName" name="firstName" required />
                <label for="firstName">Nombre</label>
                <div class="input-border"></div>
            </div>
            <div class="input-group">
                <input type="text" id="lastName" name="lastName" required />
                <label for="lastName">Apellido</label>
                <div class="input-border"></div>
            </div>
        </div>
        
        <div class="input-group">
            <input type="email" id="email" name="email" required />
            <label for="email">Email</label>
            <div class="input-border"></div>
        </div>
        
        <div class="input-group">
            <input type="tel" id="phone" name="phone" required />
            <label for="phone">Teléfono</label>
            <div class="input-border"></div>
        </div>
        
        <div class="input-group">
            <select id="service" name="service" required>
                <option value="">Selecciona un servicio</option>
                <option value="alquiler-computadores">Alquiler de Computadores</option>
                <option value="alquiler-servidores">Alquiler de Servidores</option>
                <option value="alquiler-portatiles">Alquiler de Portátiles</option>
                <option value="soporte-tecnico">Soporte Técnico</option>
                <option value="mantenimiento">Mantenimiento</option>
                <option value="consultoria">Consultoría</option>
            </select>
            <div class="input-border"></div>
        </div>
        
        <div class="input-group">
            <textarea id="message" name="message" rows="4" required></textarea>
            <label for="message">Mensaje</label>
            <div class="input-border"></div>
        </div>
        
        <button type="submit" class="submit-btn">
            <span class="btn-text">Enviar Mensaje</span>
            <svg class="btn-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                <path d="M22 2L11 13"></path>
                <path d="M22 2L15 22L11 13L2 9L22 2Z"></path>
            </svg>
        </button>
    </form>
</div>

<style>
    .modern-form {
        background: rgba(15, 15, 35, 0.9);
        backdrop-filter: blur(20px);
        border: 1px solid rgba(255, 255, 255, 0.15);
        border-radius: 24px;
        padding: 3rem;
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3);
    }

    .form-header {
        margin-bottom: 2.5rem;
        text-align: center;
    }

    .form-title {
        font-size: 2.5rem;
        font-weight: 700;
        color: #ffffff;
        margin-bottom: 0.5rem;
        background: linear-gradient(135deg, #ffffff 0%, #0080ff 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .form-subtitle {
        color: rgba(255, 255, 255, 0.8);
        font-size: 1.1rem;
        font-weight: 400;
    }

    .contact-form {
        display: flex;
        flex-direction: column;
        gap: 1.5rem;
    }

    .form-row {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 1.5rem;
    }

    .input-group {
        position: relative;
    }

    .input-group input,
    .input-group select,
    .input-group textarea {
        width: 100%;
        padding: 1rem 0;
        background: transparent;
        border: none;
        border-bottom: 2px solid rgba(255, 255, 255, 0.3);
        color: #ffffff;
        font-size: 1rem;
        font-family: inherit;
        outline: none;
        transition: all 0.3s ease;
        resize: none;
    }

    .input-group input::placeholder,
    .input-group textarea::placeholder {
        opacity: 0;
    }

    .input-group label {
        position: absolute;
        top: 1rem;
        left: 0;
        color: rgba(255, 255, 255, 0.8);
        font-size: 1rem;
        transition: all 0.3s ease;
        pointer-events: none;
    }

    .input-group input:focus + label,
    .input-group input:valid + label,
    .input-group select:focus + label,
    .input-group select:valid + label,
    .input-group textarea:focus + label,
    .input-group textarea:valid + label {
        top: -0.5rem;
        font-size: 0.85rem;
        color: #0080ff;
        transform: translateY(0);
    }

    .input-border {
        position: absolute;
        bottom: 0;
        left: 0;
        width: 0;
        height: 2px;
        background: linear-gradient(135deg, #0080ff 0%, #00a3ff 100%);
        transition: width 0.3s ease;
    }

    .input-group input:focus ~ .input-border,
    .input-group select:focus ~ .input-border,
    .input-group textarea:focus ~ .input-border {
        width: 100%;
    }

    .input-group select {
        cursor: pointer;
    }

    .input-group select option {
        background: #0f0f23;
        color: #ffffff;
        padding: 0.5rem;
    }

    .submit-btn {
        margin-top: 1rem;
        padding: 1rem 2rem;
        background: linear-gradient(135deg, #0080ff 0%, #00a3ff 100%);
        border: none;
        border-radius: 16px;
        color: #ffffff;
        font-size: 1.1rem;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.75rem;
        position: relative;
        overflow: hidden;
    }

    .submit-btn::before {
        content: '';
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(135deg, rgba(255, 255, 255, 0.1) 0%, rgba(255, 255, 255, 0.3) 100%);
        transition: left 0.5s ease;
    }

    .submit-btn:hover::before {
        left: 100%;
    }

    .submit-btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 15px 30px rgba(0, 128, 255, 0.4);
    }

    .btn-text,
    .btn-icon {
        position: relative;
        z-index: 1;
    }

    .btn-icon {
        width: 20px;
        height: 20px;
        transition: transform 0.3s ease;
    }

    .submit-btn:hover .btn-icon {
        transform: translateX(4px);
    }

    /* Responsive */
    @media (max-width: 768px) {
        .modern-form {
            padding: 2rem;
        }

        .form-row {
            grid-template-columns: 1fr;
            gap: 1rem;
        }

        .form-title {
            font-size: 2rem;
        }

        .form-subtitle {
            font-size: 1rem;
        }
    }

    @media (max-width: 480px) {
        .modern-form {
            padding: 1.5rem;
        }

        .form-title {
            font-size: 1.75rem;
        }
    }
</style>

<script>
    // Form submission handling
    document.addEventListener('DOMContentLoaded', function() {
        const form = document.getElementById('contactForm') as HTMLFormElement;
        if (form) {
            form.addEventListener('submit', function(e) {
                e.preventDefault();
                
                // Get form data
                const formData = new FormData(form);
                const data = Object.fromEntries(formData.entries());
                
                // Here you can add your form submission logic
                console.log('Form Data:', data);
                
                // Show success message (you can customize this)
                alert('¡Mensaje enviado con éxito! Nos pondremos en contacto contigo pronto.');
                
                // Reset form
                form.reset();
            });
        }
    });
</script>